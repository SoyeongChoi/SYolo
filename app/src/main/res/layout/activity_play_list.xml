<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".etc_list">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@id/toolbar"
            android:orientation="horizontal"
            android:layout_marginTop="23dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:padding="15dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:text="PLAY"
                android:textStyle="bold"
                android:textColor="@color/colorDeepYellow"
                android:textSize="30dp"
                />
        </LinearLayout>
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLightGray"
                />
            <SearchView
                android:id="@+id/search"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:theme="@style/EditTheme_new"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLightGray"
                />

            <LinearLayout
                android:background="@color/white"
                android:id="@+id/header"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_header1"
                    android:layout_width="0dp"
                    android:layout_weight="4.5"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#7a7a7a"
                    android:text="TITLE" />

                <TextView
                    android:id="@+id/textView_header2"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#7a7a7a"
                    android:text="START" />

                <TextView
                    android:id="@+id/textView_header3"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#7a7a7a"
                    android:text="END" />

                <TextView
                    android:id="@+id/textView_header4"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#7a7a7a"
                    android:text="PLACE" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLightGray"
                />

            <ListView
                android:layout_margin="10dp"
                android:divider="#ffffff"
                android:layout_below="@+id/header"
                android:id="@+id/listview_p"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>